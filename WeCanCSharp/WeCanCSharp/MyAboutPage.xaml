<Page
    x:Class="WeCanCSharp.MyAboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeCanCSharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="720" Width="480">

    <Grid>
		<StackPanel Orientation="Horizontal" Background="Gray" Margin="0,0,0,688">
            <Button x:Name="Configuration" Content="Configuration"
                    Command="{x:Bind MenuCommand, Mode=OneWay}" CommandParameter="Configuration" Width="240" />
            <Button x:Name="About" Content="About"
                    Command="{x:Bind MenuCommand, Mode=OneWay}" CommandParameter="About" Width="240" />
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="60,201,0,0" Text="If you have any problem, please contact the developers... :)" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="364" />
        <TextBlock Text="Created by: Levente Dámsa, György Steinmann, Mátyás Tóth" TextWrapping="Wrap" Height="31" Margin="60,55,50,634" />
        <Image Height="100" Width="100" Source="/Assets/BME_AUT.png" Margin="190,87,190,533" RenderTransformOrigin="0.583,0.283" />
    </Grid>
</Page>